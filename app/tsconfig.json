{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "../",
    "module": "es2020",
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "es2020"],
    "noEmit": true,
    "paths": {
      "micro-memoize": ["../typings/micro-memoize"],
      "@foxglove-studio/app/*": ["./*"]
    },
    "noUnusedParameters": false
  },
  "typeAcquisition": {
    "exclude": ["node"]
  },
  "include": [
    "**/*",
    "**/*.json",
    ".storybook/**/*",
    "../typings/*.d.ts",
    "../*.ts",
    "../package.json"
  ],
  "references": [{ "path": "../packages" }]
}
