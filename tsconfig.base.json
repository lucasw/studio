// Base TypeScript configuration shared across entire repo
{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "newLine": "lf",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": ["node_modules/@types", "./typings"]
  }
}
